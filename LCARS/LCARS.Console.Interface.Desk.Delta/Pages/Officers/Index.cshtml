<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Officer[0].Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Officer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Officer[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Officer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Officer[0].Assignment)
